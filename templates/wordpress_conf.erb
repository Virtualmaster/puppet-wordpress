<VirtualHost *:80>
  	DocumentRoot "<%= @app_directory =%>"
    ServerName <%= @app_server_name =%>
    Redirect /<%= @app_server_alias =%> http://<%= @app_server_name =%>
    Redirect /<%= @app_server_alias =%>/ http://<%= @app_server_name =%>
	<Directory />
		Options FollowSymLinks
		AllowOverride FileInfo
	</Directory>
</VirtualHost>

