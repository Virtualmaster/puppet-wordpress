<VirtualHost *:80>
  	DocumentRoot "<%= scope.lookupvar('wordpress::app_directory') %>"
    ServerName <%= scope.lookupvar('wordpress::app_server_name') %>
    Redirect /<%= scope.lookupvar('wordpress::app_server_alias') %> http://<%= scope.lookupvar('wordpress::app_server_name') %>
    Redirect /<%= scope.lookupvar('wordpress::app_server_alias') %>/ http://<%= scope.lookupvar('wordpress::app_server_name') %>
	<Directory />
		Options FollowSymLinks
		AllowOverride FileInfo
	</Directory>
</VirtualHost>

